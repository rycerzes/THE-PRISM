{   
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "./src",
        "lib": ["ESNEXT"],
        "esModuleInterop": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",

        "paths": {
            "#structures/*": ["./lib/structures/*"],
            "#lib/*": ["./lib/*"],
            "#util/*": ["./util/*"],
			"#root/*": ["./*"]
		}
    },
    "include": ["src"]
}