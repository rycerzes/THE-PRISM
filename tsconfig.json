{   
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNEXT",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "./src",
        "lib": ["ESNEXT"],
        "esModuleInterop": true,
        "allowJs": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",

        "paths": {
            "#structures/*": ["./lib/structures/*"],
            "#types/*": ["./lib/tpyes/*"],
            "#util/*": ["./lib/util/*"],
            "#assets/*": ["./assets/*"],
            "#lib/*": ["./lib/*"],
			"#root/*": ["./*"]
		}
    },
    "include": ["src"]
}